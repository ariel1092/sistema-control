{
  "name": "ventas-ferreteria-backend",
  "version": "1.0.0",
  "description": "Módulo de Ventas profesional para Ferretería - Arquitectura Hexagonal",
  "author": "",
  "private": true,
  "license": "MIT",
  "scripts": {
    "build": "nest build",
    "build:tsc": "tsc -p tsconfig.build.json && tsc-alias",
    "build:tsc:verify": "tsc -p tsconfig.build.json && tsc-alias && echo '=== Archivos en dist/ ===' && ls -la dist/ && echo '=== Buscando main.js ===' && find dist -name 'main.*' -type f && echo '=== Estructura completa ===' && find dist -type f | head -20",
    "build:verify": "tsc -p tsconfig.build.json && tsc-alias && ls -la dist/ && find dist -name 'main.*' -type f",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/src/main",
    "start:prod:explicit": "cd $(pwd) && node dist/main.js",
    "deploy": "npm run build && npm run start:prod",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "migration:excel": "ts-node scripts/migrate-excel.ts",
    "seed:products": "ts-node scripts/seed-products.ts",
    "seed:ventas": "ts-node scripts/seed-ventas.ts",
    "seed:admin": "ts-node scripts/seed-admin.ts",
    "seed:precios-proveedores": "ts-node scripts/seed-precios-proveedores.ts",
    "clean:db": "ts-node scripts/clean-database.ts",
    "clear:db": "ts-node scripts/clear-database.ts",
    "clear:db:prod": "ts-node scripts/clear-database-prod.ts",
    "keep-alive": "ts-node scripts/keep-alive.ts",
    "create:indexes": "ts-node scripts/create-indexes.ts",
    "backup:mongodb": "ts-node scripts/backup-mongodb.ts",
    "backup:mongodb:compress": "ts-node scripts/backup-mongodb.ts --compress"
  },
  "dependencies": {
    "@nestjs/cache-manager": "^3.0.1",
    "@nestjs/common": "^10.3.0",
    "@nestjs/config": "^3.1.1",
    "@nestjs/core": "^10.3.0",
    "@nestjs/jwt": "^10.2.0",
    "@nestjs/mongoose": "^10.0.2",
    "@nestjs/passport": "^10.0.3",
    "@nestjs/platform-express": "^10.3.0",
    "@nestjs/swagger": "^7.1.16",
    "@nestjs/throttler": "^6.5.0",
    "@sentry/node": "^7.120.4",
    "@types/xlsx": "^0.0.35",
    "axios": "^1.6.2",
    "bcrypt": "^5.1.1",
    "cache-manager": "^7.2.5",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "date-fns": "^3.0.6",
    "helmet": "^8.1.0",
    "mongoose": "^8.0.3",
    "nest-winston": "^1.9.4",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1",
    "winston": "^3.11.0",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@faker-js/faker": "^10.1.0",
    "@nestjs/cli": "^10.2.1",
    "@nestjs/schematics": "^10.0.3",
    "@nestjs/testing": "^10.3.0",
    "@types/bcrypt": "^5.0.2",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.6",
    "@types/passport-jwt": "^4.0.1",
    "@types/passport-local": "^1.0.36",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.2",
    "jest": "^29.7.0",
    "prettier": "^3.1.1",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.1",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.8",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.ts",
      "!**/*.spec.ts",
      "!**/*.module.ts",
      "!**/main.ts",
      "!**/index.ts",
      "!**/*.interface.ts",
      "!**/*.dto.ts"
    ],
    "coverageDirectory": "../coverage",
    "coverageReporters": [
      "text",
      "text-summary",
      "html",
      "lcov"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "testEnvironment": "node",
    "moduleNameMapper": {
      "^@domain/(.*)$": "<rootDir>/domain/$1",
      "^@application/(.*)$": "<rootDir>/application/$1",
      "^@infrastructure/(.*)$": "<rootDir>/infrastructure/$1",
      "^@presentation/(.*)$": "<rootDir>/presentation/$1",
      "^src/(.*)$": "<rootDir>/$1"
    }
  }
}
